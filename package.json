    "rxjs": "^6.6.2",
    "typeorm": "^0.2.25",
    "typescript": "^4.0.2"
  },
  "devDependencies": {
    "eslint": "^7.7.0",
    "nodemon": "^2.0.4",
    "prettier": "^2.0.5",
    "ts-node": "^9.0.0",
    "tsconfig-paths": "^3.9.0"
